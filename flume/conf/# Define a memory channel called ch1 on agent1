# Define a memory channel called ch1 on agent1
agent1.channels.ch1.type = memory
 
# Define an Avro source called avro-source1 on agent1 and tell it
# to bind to 0.0.0.0:41414. Connect it to channel ch1.
agent1.sources.file1.channels = ch1
agent1.sources.file1.type = exec
agent1.sources.file1.command = tail -F /Users/dbocharov/Documents/detect-bot-project/DetectBotProject/input_data/input.json


 
# Define a logger sink that simply logs all events it receives
# and connect it to the other end of the same channel.
agent1.sinks.kafka1.channel = ch1
agent1.sinks.kafka1.type = org.apache.flume.sink.kafka.KafkaSink
agent1.sinks.kafka1.kafka.topic = events
agent1.sinks.kafka1.kafka.brokerList = 127.0.0.1:9092
agent1.sinks.kafka1.kafka.producer.acks = 1
agent1.sinks.kafka1.kafka.producer.compression.type = gzip
 
# Finally, now that we've defined all of our components, tell
# agent1 which ones we want to activate.
agent1.channels = ch1
agent1.sources = file1
agent1.sinks = kafka1